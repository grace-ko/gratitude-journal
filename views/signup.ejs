<!-- views/login.ejs -->
<!doctype html>
<html>
  <head>
    <title>Sign Up</title>
  </head>
  <body>
    <form action="/signup" method="post">
      <div>
        <% if (message) { %>
          <div><%= message %></div>
        <% } %>
        <label>EMAIL</label>
        <input type="text" class="form-control" name="email">
        <hr />
        <div>
          <label>PASSWORD</label>
          <input type="password" class="form-control" name="password">
        </div>
        <hr />
        <button type="submit">Sign Up</button>
      </div>
    </form>
  </body>
</html>
